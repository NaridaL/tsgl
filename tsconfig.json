{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": ["dom", "es2019"],
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declarationDir": "lib",
    "outDir": "lib",
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "newLine": "lf",
    "strictNullChecks": true,
    "target": "es6",
    "importHelpers": true,
    "noImplicitReturns": true,
    "baseUrl": ".",
    "paths": {
      "tsgl": ["src/index.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/demo/**/*.*"]
}

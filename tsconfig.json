{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": [
      "dom",
      "es2017",
      "es6"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "out",
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es6",
    "importHelpers": true,
    "noImplicitReturns": true,
    "baseUrl": ".",
    "paths": {
      "tsgl": ["src/index.ts"]
    }
  },
  "include": [
    "node_modules/webgl-strict-types/index.d.ts",
    "src/index.ts",
    "src/shaders/*.glslx.d.ts"
  ]
}
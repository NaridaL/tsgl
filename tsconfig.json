{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "none",
    //    "outDir": "out/",
    "outFile": "out/complete.js",
    "rootDir": ".",
    "target": "es6",
    "noImplicitAny": true,
//    "strictNullChecks": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": [
      "dom",
      "es2017"
    ],
    "declaration": true,
    "skipLibCheck": true
  },
  "include": [
    "node_modules/ts3dutils/out/complete.d.ts",
    "src/**/*.*",
    "test/**/*.*"
  ],
  "exclude": [
    "src/index.ts"
  ]
}
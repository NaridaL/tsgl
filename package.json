{
  "author": "Adrian Leonhard <adrianleonhard@gmail.com> (https://github.com/NaridaL)",
  "dependencies": {
    "chroma-js": "^1.3.7",
    "ts3dutils": "../ts3dutils",
    "tslib": "^1.9.3",
    "webgl-strict-types": "^1.0.0"
  },
  "description": "Light TypeScript wrapper around WebGL based on https://github.com/evanw/lightgl.js/",
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/chroma-js": "^1.3.5",
    "@types/mocha": "^5.2.5",
    "@types/opentype.js": "^0.7.0",
    "chai": "^4.1.2",
    "concurrently": "^3.6.1",
    "cross-env": "^5.2.0",
    "mocha": "^5.0.1",
    "naridal-tslib-config": "^1.0.0",
    "opentype.js": "^0.10.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.14.2",
    "rollup": "^0.64.1",
    "rollup-plugin-alias": "^1.4.0",
    "rollup-plugin-glsl": "^1.2.0",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-livereload": "^0.6.0",
    "rollup-plugin-multi-entry": "^2.0.2",
    "rollup-plugin-node-resolve": "^3.0.3",
    "rollup-plugin-serve": "^0.4.2",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript": "^0.8.1",
    "ts-loader": "^4.5.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.1",
    "uglify-es": "^3.3.9"
  },
  "keywords": [
    "typescript",
    "webgl",
    "es6"
  ],
  "license": "MIT",
  "main": "dist/bundle.js",
  "module": "dist/bundle.module.js",
  "name": "tsgl",
  "scripts": {
    "build": "tsc & rollup -c",
    "config": "node node_modules/naridal-tslib-config",
    "dev": "concurrently --kill-others \"tsc -w\" \"rollup -c -w\"",
    "linky": "npm link && npm link ts3dutils naridal-tslib-config",
    "lint": "tslint --project tsconfig.json && tslint --project src/demo/tsconfig.json",
    "minify": "uglifyjs dist/bundle.js --output dist/bundle.min.js --compress --mangle && uglifyjs dist/bundle.module.js --output dist/bundle.module.min.js --compress --mangle",
    "test": "(cd tests && mocha --ui tdd --require ts-node/register ./**/*.test.ts)",
    "test:ci": "npm run build && npm run lint && npm test",
    "demo:watch": "rollup -c rollup.demo.config.js -w",
    "demo:build": "rollup -c rollup.demo.config.js",
    "pre-commit": "npm run lint && npm run build && npm run demo:build && git add dist/*",
    "prettier": "prettier -l --write \"{src,test}/**/*.ts\""
  },
  "pre-commit": [
    "pre-commit"
  ],
  "types": "index.d.ts",
  "umdGlobal": "tsgl",
  "version": "1.1.0",
  "prettier": {
    "useTabs": true,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120,
    "tabWidth": 4
  }
}

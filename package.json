{
  "author": "Adrian Leonhard <adrianleonhard@gmail.com> (https://github.com/NaridaL)",
  "dependencies": {
    "chroma-js": "^1.3.4"
  },
  "description": "Light TypeScript wrapper around WebGL based on https://github.com/evanw/lightgl.js/",
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/chroma-js": "^1.3.1",
    "chai": "^4.1.2",
    "concurrently": "^3.5.0",
    "cross-env": "^5.1.3",
    "fs-extra": "^4.0.1",
    "mocha": "^4.0.0",
    "naridal-tslib-config": "^1.0.0",
    "rollup": "^0.54.1",
    "rollup-plugin-alias": "^1.4.0",
    "rollup-plugin-glsl": "^1.1.0",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-livereload": "^0.6.0",
    "rollup-plugin-multi-entry": "^2.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-serve": "^0.4.2",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript": "^0.8.1",
    "ts-loader": "^3.3.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2",
    "uglify-es": "^3.0.28"
  },
  "keywords": [
    "typescript",
    "webgl",
    "es6"
  ],
  "license": "MIT",
  "main": "dist/bundle.js",
  "module": "dist/bundle.module.js",
  "name": "tsgl",
  "scripts": {
    "build": "tsc & rollup -c & rollup -c rollup.module.config.js & npm run minify",
    "config": "node node_modules/naridal-tslib-config",
    "dev": "concurrently --kill-others \"tsc -w\" \"rollup -c -w\"",
    "linky": "npm link && npm link ts3dutils naridal-tslib-config",
    "lint": "tslint --project tsconfig.json",
    "minify": "uglifyjs dist/bundle.js --output dist/bundle.min.js --compress --mangle && uglifyjs dist/bundle.module.js --output dist/bundle.module.min.js --compress --mangle",
    "test": "(cd tests && mocha --ui tdd --require ts-node/register ./**/*.test.ts)",
    "test:ci": "npm run build && npm run lint && npm test",
    "watchdemo": "rollup --version && rollup -c rollup.demo.config.js -w",
    "builddemo": "cross-env PRODUCTION=true rollup -c rollup.demo.config.js"
  },
  "types": "index.d.ts",
  "umdGlobal": "tsgl",
  "version": "1.0.0"
}
